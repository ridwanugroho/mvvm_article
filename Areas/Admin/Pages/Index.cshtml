@page
@model Article.Areas.Admin.Pages.IndexModel
@{
    var article = ViewData["articles"] as List<Article.Model.Articles>;
}

<table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">No</th>
        <th scope="col">Title</th>
        <th scope="col">Status</th>
        <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (var item in article)
        {
            <tr>
            <th scope="row">@i</th>
            <td>@item.Titile</td>
            <td>@item.Status</td>
            <td>
                @if(item.Status == "draft"){
                    <button class="btn btn-info" onclick="window.location.href = '/admin/index?handler=publish&id=@item.id';">Publish</button>
                }
                <button class="btn btn-warning" onclick="window.location.href = '/admin/create?edit=@item.id';">Edit</button>
                @if(item.Status == "deleted"){
                    <button class="btn btn-info" onclick="window.location.href = '/admin/index?handler=Restore&id=@item.id';">RePublish</button>
                }
                else
                {
                    <button class="btn btn-danger" onclick="window.location.href = '/admin/index?handler=DeleteArticle&delete=@item.id';">Delete</button>
                }
            </td>
            </tr>
            i++;
        }
        
    </tbody>
</table>
