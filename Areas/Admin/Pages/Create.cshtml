@page 
@model Article.Areas.Admin.Pages.CreateModel
@{
    var articleId = ViewData["articleId"] as string;
    var article = ViewData["article"] as Article.Model.Articles;
}

<form action="" method="post">
    @{
        if(articleId != "0"){
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Title . . ." value="@article.Titile">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="10">@article.Content</textarea>
            </div>
            <div>
                <label for="status">Status</label>
                <select id="status" name="status" class="form-control">
                    <option value="publish">Publish</option>
                    <option value="deleted">Deleted</option>
                </select>
            </div>
            <input type="text" name="edit" id="edit" value="@article.id" hidden>
            <div class="d-flex">
                <input type="submit" class="p-2 btn btn-primary" value="Save">
            </div>
        }

        else{
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Title . . .">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="10"></textarea>
            </div>
            <div class="d-flex">
                <input type="submit" class="p-2 btn btn-primary" value="Save as draft">
                <input type="submit" class="ml-auto p-2 btn btn-primary" value="Submit Article">
            </div>
        }
    }
</form>
